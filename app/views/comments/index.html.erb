<h1>Listing comments</h1>
<p id="notice"><%= notice %></p>
<table>
  <tr>
    <th>Song</th>
    <th>User</th>
    <th>Content</th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= Song.find(comment.song_id).name %></td>
    <td><%= User.find(comment.user_id).username %></td>
	<td><%= comment.content %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_comment_path %>