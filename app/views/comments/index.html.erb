<h1>Listing comments</h1>
<p id="notice"><%= notice %></p>
<table>
  <tr>
    <th>Song</th>
    <th>User</th>
    <th>Content</th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    	<td>
			<% @songs.each do |song| %>
			<% if song.id == comment.song_id %>
				<%= song.name %>
			<% end %>	
			<% end %>
		</td>
		<td>
		   	<% @users.each do |user| %>
				<% if comment.user_id == user.id %>
		    		<%= user.username %>
				<% end %>
		 	<% end %>
		</td>
	<td><%= comment.content %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_comment_path %>